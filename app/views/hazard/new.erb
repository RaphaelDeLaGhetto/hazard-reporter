<section class="auth">
  <h1>Post new hazard</h1>
  <div class="submit-form">
    <%= erb(:errors, { local: {object: @hazard}}) %>
    <form action="/hazard" enctype="multipart/form-data" method="post">
      <div class="form-group">
        <label for="description">Description:</label>
        <input type="text" name="description" value="<%= @hazard.description %>">
      </div>
      <div class="form-group">
        <label for="image">JPEG with coords:</label>
        <input type="file" name="image" accept="image/jpeg">
      </div>
      <div class="form-group">
        <button type="submit">Post</button>
      </div>
    </form>
  </div>
</section>